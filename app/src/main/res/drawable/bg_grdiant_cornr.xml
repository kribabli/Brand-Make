<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorPremium" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/color1" />
            <corners
                android:radius="@dimen/_10sdp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorPremium"
                android:endColor="@color/hint"
                android:angle="270" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/color1" />
            <corners
                android:radius="@dimen/_10sdp" />

        </shape>
    </item>

</selector>