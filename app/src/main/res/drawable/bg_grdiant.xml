<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorTheame_dark" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/colorTheame_dark" />
            <corners android:radius="@dimen/_3sdp"/>

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorTheame"
                android:endColor="@color/colorTheame_dark"
                android:angle="270" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/colorTheame_dark" />
            <corners android:radius="@dimen/_3sdp"/>

        </shape>
    </item>

</selector>