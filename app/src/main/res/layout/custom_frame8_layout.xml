<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logolayout8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_f8_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_3sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:text="Name"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBlack"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <LinearLayout
                        android:id="@+id/ll_f8_web"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_weblayout8"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/f2_web" />

                        <TextView
                            android:id="@+id/tv_websitelayout8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="www.companywebsite.com"
                            android:textColor="@color/colorWhite"
                            android:textSize="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_f8_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlack"
                        android:padding="2dp"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_calllayout8"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/f2_call" />

                        <TextView
                            android:id="@+id/tv_calllayout8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91 9876543210"
                            android:textColor="@color/colorWhite"
                            android:textSize="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_f8_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_emaillayout8"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/f2_email"/>

                        <TextView
                            android:id="@+id/tv_emaillayout8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="companyemail@gmail.com"
                            android:textColor="@color/colorWhite"
                            android:textSize="10dp"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:padding="1dp"
                   >
                    <LinearLayout
                        android:id="@+id/ll_f8_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ll_social"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_locationlayout8"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="2dp"
                            android:src="@drawable/f2_loct"/>

                        <TextView
                            android:id="@+id/tv_locationlayout8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="companyemail@gmail.com"
                            android:textColor="@color/colorWhite"
                            android:textSize="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_social"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/f_facebook" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/f_insta" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/f_twitter" />
                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>
            <!-- <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="2dp"
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="5dp"
                 android:layout_marginTop="3dp"
                 android:layout_marginBottom="3dp"
                 android:src="@color/colorBlack">

             </ImageView>-->


            <!--  <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:src="@drawable/f_location"
                      android:layout_marginRight="4dp">
                  </ImageView>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Company Address"
                      android:textColor="@color/colorBlack"
                      android:textSize="12dp"></TextView>
              </LinearLayout>-->


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>