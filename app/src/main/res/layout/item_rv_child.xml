<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="13dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_childitemimage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pager_1" />

            <LinearLayout
                android:id="@+id/ll_childitem_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorTheame_dark"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/childitem_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textSize="@dimen/_9sdp"
                    android:text="27 Feb 2021"
                    android:textColor="@color/colorWhite"></TextView>
            </LinearLayout>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_childitem_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abcccc"
        android:textColor="@color/colorTheame"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"

        android:layout_marginBottom="5dp"
        android:textSize="12dp">

    </TextView>
</LinearLayout>