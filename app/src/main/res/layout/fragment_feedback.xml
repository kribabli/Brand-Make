<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGrey3"
    android:orientation="vertical"
    tools:context="com.festivalbanner.digitalposterhub.Activities.ActivitySignIn">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back1" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/ll_"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/carter_one"
            android:text="WELCOME TO"

            android:textColor="@color/colorTheame"
            android:textSize="24dp"
            android:textStyle="bold">

        </TextView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/brandmake"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/carter_one"
            android:text="@string/app_name"
            android:textColor="@color/colorTheame"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/ll_"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_15sdp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:padding="@dimen/_10sdp"
            android:text="Please give your \nValuable feedback"
            android:textSize="@dimen/_22sdp"
            android:textColor="@color/colorTheame"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:elevation="4dp"
            android:background="@drawable/roundcorner_planwhitebg">
            <EditText
                android:id="@+id/et_f_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:editable="false"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorLightGrey"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:elevation="4dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/roundcorner_planwhitebg">
            <EditText
                android:id="@+id/et_f_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:editable="false"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorLightGrey"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/roundcorner_planwhitebg">
            <EditText
                android:id="@+id/et_f_discription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Enter Discription"
                android:singleLine="false"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorLightGrey"
                android:textSize="15dp" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="right"
            android:layout_below="@+id/ll_main"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/colorTheame"
            app:cardCornerRadius="@dimen/_25sdp">
        <LinearLayout
            android:id="@+id/ll_f_send"
            android:onClick="onClickSignIn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SEND"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:textStyle="bold"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>