<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--iv_calllayout2 tv_mobilenumberlayout2-->

    <!--iv_weblayout2 tv_websitelayout2-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/f2_border"/>


        <ImageView
            android:id="@+id/iv_logolayout2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_f2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logolayout2"
            android:layout_marginLeft="10dp"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingTop="@dimen/_1sdp"
            android:paddingRight="@dimen/_3sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:text="Name"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp" />
        <LinearLayout
            android:id="@+id/ll_f2_bottom_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#58595b"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_f2_email"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:background="#58595b"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/iv_emaillayout2"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/f2_email" />

                    <TextView
                        android:id="@+id/tv_emaillayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="your company email@gmail.com"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_f2_call"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:background="#58595b"
                    android:gravity="right"
                    >

                    <ImageView
                        android:id="@+id/iv_calllayout2"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/f2_call" />

                    <TextView
                        android:id="@+id/tv_mobilenumberlayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="+91 12345 67895"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/ll_f2_location"
                    android:paddingLeft="@dimen/_3sdp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:id="@+id/iv_locationlayout2"
                        android:src="@drawable/f2_loct"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="your company address"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:id="@+id/tv_locationlayout2"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/ll_f2_web"
                    android:paddingRight="@dimen/_2sdp"
                    android:gravity="center|right">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:id="@+id/iv_weblayout2"
                        android:src="@drawable/f2_web"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="www.your website.com"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:id="@+id/tv_websitelayout2"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <!--
                <StickerView
                    android:id="@+id/sticker_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    app:showBorder="true"
                    app:showIcons="true" />
        -->

    </RelativeLayout>
</LinearLayout>