                            android:cursorVisible="true"

                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="Enter your business mobile number"
                            android:inputType="number"
                            android:isScrollContainer="true"
                            android:textColor="@color/colorTheame"
                            android:textColorHint="@color/colorLightGrey"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/roundcorner_planwhitebg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_businessemail"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:cursorVisible="true"
                            android:focusable="true"

                            android:focusableInTouchMode="true"
                            android:hint="Enter your business email"
                            android:inputType="textEmailAddress"
                            android:isScrollContainer="true"
                            android:textColor="@color/colorTheame"
                            android:textColorHint="@color/colorLightGrey"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/roundcorner_planwhitebg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_businesswebsite"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@null"

                            android:cursorVisible="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="Enter your business website"
                            android:inputType="textPersonName"
                            android:isScrollContainer="true"
                            android:textColor="@color/colorTheame"
                            android:textColorHint="@color/colorLightGrey"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/roundcorner_planwhitebg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_businessaddress"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@null"

                            android:cursorVisible="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="Enter your business address  "
                            android:inputType="textPersonName"
                            android:isScrollContainer="true"
                            android:textColor="@color/colorTheame"
                            android:textColorHint="@color/colorLightGrey"
                            android:textSize="15dp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


