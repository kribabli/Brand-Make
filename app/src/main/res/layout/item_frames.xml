<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="3dp">

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_frame"
                android:layout_width="match_parent"
                android:src="@drawable/frame_1"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:id="@+id/ll_frameselected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:alpha=".8"
                android:background="@color/colorTheame"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_rightcheck_"
                    android:tint="@color/hint" />

            </LinearLayout>
          <!--  <ImageView
                android:id="@+id/frameselected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/roundcorner_view" />-->

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
