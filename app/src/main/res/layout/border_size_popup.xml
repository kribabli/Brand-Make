<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.festivalbanner.digitalposterhub.Utills.PaletteBar
        android:id="@+id/paletteBar"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:id="@+id/ll_selectborder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTheame"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Select Border Size"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivMinus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="05dp"
                    android:src="@drawable/pf_minusicon"
                    android:tint="@color/colorWhite" />

                <EditText
                    android:id="@+id/etBordersize"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"

                    />

                <ImageView
                    android:id="@+id/ivPlus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/pf_plusicon"
                    android:tint="@color/colorWhite" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>