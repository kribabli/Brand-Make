<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_logolayout4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_80sdp"
            android:background="@drawable/f4_line" />

        <TextView
            android:id="@+id/tv_f4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:paddingLeft="@dimen/_3sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingRight="@dimen/_3sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:text="Name"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:gravity="center_vertical"
                    android:id="@+id/ll_f4_email"
                    android:background="@drawable/f4_left_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_emaillayout4"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/f4_email"/>

                    <TextView
                        android:id="@+id/tv_emaillayout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="companyemail@gmail.com"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/ll_f4_call"
                    android:background="@drawable/f4_right_bg"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_calllayout4"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/f4_call"/>

                    <TextView
                        android:id="@+id/tv_mobilenumberlayout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 987654321"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10sdp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_f4_bottom_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_24sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:id="@+id/ll_f4_web"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="#58585a"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/iv_weblayout4"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="11dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/f4_web" />
                    <TextView
                        android:id="@+id/tv_websitelayout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="www.companywebsite.com"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_f4_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:paddingRight="@dimen/_2sdp"
                    android:background="#58585a"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/iv_locationlayout4"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="11dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/f2_loct" />

                    <TextView
                        android:id="@+id/tv_locationlayout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="address"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10sdp"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>