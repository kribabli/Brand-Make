<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTheame_background"
    android:orientation="vertical"
    tools:context="com.festivalbanner.digitalposterhub.Activities.ActivitySignIn">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back1" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:rotation="45"
                    android:alpha="0.5"
                    android:visibility="gone"
                    android:background="@color/colorTheame_gray2"
                    />

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:rotation="45"
                    android:alpha="0.5"
                    android:visibility="gone"
                    android:background="@color/background"
                    />

                <LinearLayout
                    android:id="@+id/ll_"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="250dp"
                    android:background="@drawable/rectangle_shape"
                    android:gravity="center|bottom"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_50sdp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_50sdp"
                        android:padding="@dimen/_10sdp"
                        android:text="Login to \nYour account"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_30sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/roundcorner_planwhitebg"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="12dp">

                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:cursorVisible="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="Enter your Email Address"
                            android:inputType="textEmailAddress"
                            android:isScrollContainer="true"
                            android:textColor="@color/colorTheame"
                            android:textColorHint="@color/white"
                            android:textSize="15dp" />
                        <!--    <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email "
                    android:padding="20dp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/roundcorner_planwhitebg"
                        android:elevation="4dp"
                        android:gravity="center"

                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:cursorVisible="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="Enter your Password"
                            android:inputType="textPassword"
                            android:isScrollContainer="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_forgetpass_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:onClick="onClickSignIn"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_forget_pass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Forget password?"
                            android:textColor="@color/white"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/colorTheame"
                        app:cardCornerRadius="@dimen/_25sdp">

                        <LinearLayout
                            android:id="@+id/ll_signin_btn"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_gravity="right"
                            android:onClick="onClickSignIn"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/finish_businness"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="SIGN IN"
                                android:textColor="@color/colorWhite"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Don't an have account ? "
                            android:textColor="@color/colorBlack"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:visibility="gone"></TextView>

                        <TextView
                            android:id="@+id/tv_signup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onClickSignIn"
                            android:text="Create Your Account"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:background="@color/colorTheame" />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>